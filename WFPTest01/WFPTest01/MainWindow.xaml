<Window x:Class="WFPTest01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="ID" HorizontalAlignment="Left" Margin="83,62,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="197,62,0,0" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top" Width="120"/>
        <Label Content="名前" HorizontalAlignment="Left" Margin="83,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.145,-0.046"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="197,122,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <Label Content="住所" HorizontalAlignment="Left" Margin="83,173,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="197,173,0,0" TextWrapping="Wrap" Text="{Binding Address}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
